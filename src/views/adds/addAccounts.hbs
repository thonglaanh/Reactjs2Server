<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    form {
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0px 0px 10px #ccc;
        text-align: center;
    }

    .form-control {
        margin-bottom: 10px;
        width: 300px;
    }

    .form-logo {
        width: 100px;
        height: 60px;
        margin-bottom: 20px;
    }

    .form-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }
</style>
<form method="POST" action="/account/add" onsubmit="return validateForm()" style="background-color: antiquewhite;"
    enctype="multipart/form-data">
    <div class="form-title">Thêm mới tài khoản</div>
    <div class="mb-3">
        <input type="text" class="form-control" id="name" name="name" placeholder="Nhập tên tài khoản">
    </div>
    <div class="mb-3">
        <label for="avatar">Nhập tuổi</label>
        <input type="date" class="form-control" id="date" name="date" placeholder="Nhập ngày tháng năm sinh">
    </div>
    <div class="mb-3">
        <input type="email" class="form-control" id="email" name="email" placeholder="Nhập email tài khoản">
    </div>
    <div class="mb-3">
        <input type="password" class="form-control" id="password" name="password" placeholder="Nhập mật khẩu tài khoản">
    </div>
    <div class="mb-3">
        <label for="avatar">Ảnh đại diện</label>
        <input type="file" id="image" name="image">
    </div>
    <button type="submit" class="btn btn-success">Thêm tài khoản</button>
</form>
<script>
    function validateForm() {
        const name = document.getElementById("name").value;
        const date = document.getElementById("date").value;
        const email = document.getElementById("email").value;
        const password = document.getElementById("password").value;
        const image = document.getElementById("image").value;

        if (!name || !date || !email || !password || !image) {
            alert("Vui lòng điền đầy đủ thông tin.");
            return false;
        }
        if (/^\d{1,2}\/\d{1,2}\/\d{4}$/.test(date)) {
            alert("Định dạng ngày không hợp lệ.");
            return false;
        }

        return true;
    }
</script>