{{>header}}
<div class="d-flex" style="justify-content: space-between; margin: 10px 200px;">

    <button type="button" class="btn btn-info ms-3" onclick="window.location.href='/account/addNew'">Thêm mới tài
        khoản</button>
</div>
<table class="table table-striped table-bordered" style="width: 1300px;margin: auto;">
    <thead>
        <tr>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Date</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>

        </tr>
    </thead>
    <tbody>
        {{#each account}}
        <tr>
            <td><img src="{{this.image}}" style="width: 60px; height: 70px;object-fit: cover; "></td>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.date}}</td>
            <td><a href="/account/screenUpdate/{{this._id}}" style="text-decoration: none;color: blue;">Sửa</a></td>
            <td>
                <form action="/account/delete/{{this._id}}" method=""
                    onsubmit="return confirm('Bạn có muốn xóa {{this.name}} này?')">
                    <button type="submit" class="btn btn-link" style="text-decoration: none;color: brown;">Xóa</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>